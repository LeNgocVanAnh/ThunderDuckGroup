        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">

                <div class="area-title text-center">
                    <h2>Xây Dựng</h2>
                </div>

                <div class="container-left">
                    <img src="~/Content/ThunderDuckConstruction/img/construction/2.jpg" alt="Avatar" class="image-left">
                    <div class="overlay-left">
                        <div class="text-left">Hello World</div>
                    </div>
                </div>

                <div class="container-left">
                    <img src="~/Content/ThunderDuckConstruction/img/construction/1.jpg" alt="Avatar" class="image-left">
                    <div class="overlay-left">
                        <div class="text-left">Hello World</div>
                    </div>
                </div>
                <div class="container-left">
                    <img src="~/Content/ThunderDuckConstruction/img/construction/3.jpg" alt="Avatar" class="image-left">
                    <div class="overlay-left">
                        <div class="text-left">Hello World</div>
                    </div>
                </div>
                <div class="container-left">
                    <img src="~/Content/ThunderDuckConstruction/img/construction/2.jpg" alt="Avatar" class="image-left">
                    <div class="overlay-left">
                        <div class="text-left">Hello World</div>
                    </div>
                </div>

                <div class="clearfix"></div>

            </div>
        </div>
    </div>
</section>
<!--RESERVATION BUTTON AREA END-->
<!--TEAM AREA-->
