                                            <label for="exampleFormControlFile1">Hình ảnh 1 (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                            <br />
                                            <input type="file" name="Images" accept="image/*" multiple="multiple" />
                                            <div class="row">
                                                @foreach (var img in arrStr)
                                                {

                                                    <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@img') center center no-repeat / cover;">
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-group">
                                            <label for="exampleFormControlFile1">Hình ảnh  (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                            <br />
                                            <input type="file" name="Images" accept="image/*" multiple="multiple" />
                                            <img src="~/Images/ThunderDuckGroup/imageHome/@Model.FirstOrDefault().Images" style="width:100%" />
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh 2 (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="Images" accept="image/*" multiple="multiple" />
                                    </div>
                                }

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề 1 (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" placeholder="" name="title" value="@Model.FirstOrDefault().Title">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Nội dung 1 (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" placeholder="" name="subtitle" value="@Model.FirstOrDefault().Subtitle">
                                </div>

