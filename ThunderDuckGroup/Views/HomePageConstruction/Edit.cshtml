@model IQueryable<ThunderDuckGroup.Models.Td_Construction_Slider>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/ThunderDuckConstruction/_LayoutWebmaster.cshtml";
    string[] arrStr;
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa trang chủ</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa Slider</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/homepageconstruction/edit" method="post" enctype="multipart/form-data">

                                @if (Model.FirstOrDefault().Logo != null)
                                {
                                    if (Model.FirstOrDefault().Logo.Contains(","))
                                    {
                                        arrStr = Model.FirstOrDefault().Logo.Split(',');
                                        <div class="form-group">
                                            <label for="exampleFormControlFile1">Thay đổi hình Logo (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                            <br />
                                            <input type="file" name="logo" accept="image/*" multiple="multiple" />
                                            <div class="row">
                                                @foreach (var logo in arrStr)
                                                {

                                                    <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@logo') center center no-repeat / cover;">
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-group">
                                            <label for="exampleFormControlFile1">Thay đổi hình logo (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                            <br />
                                            <input type="file" name="logo" accept="image/*" multiple="multiple" />
                                            <div class="row">
                                                <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@Model.FirstOrDefault().Logo') center center no-repeat / cover;">
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Thay đổi hình logo (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="logo" accept="image/*" multiple="multiple" />
                                    </div>
                                }
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Email (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" placeholder="" name="email" value="@Model.FirstOrDefault().Email">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Phone (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" placeholder="" name="phone" value="@Model.FirstOrDefault().Phone">
                                </div>
                                @if (Model.FirstOrDefault().Images != null)
                                {
                                    if (Model.FirstOrDefault().Images.Contains(","))
                                    {
                                        arrStr = Model.FirstOrDefault().Images.Split(',');
