@model IEnumerable<ThunderDuckGroup.Models.ConMaster>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/ThunderDuckConstruction/_LayoutWebmaster.cshtml";
    string[] arrStr;
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách hình ảnh</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa danh sách hình ảnh</h4>
                            </div>
                        </div>
                        <form action="/imagesconstruction/edit" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="form-group">
                                    <label>Tiêu đề</label>
                                    <input type="text" id="namegift" name="title" class="form-control" value="@Model.FirstOrDefault().ima.FirstOrDefault().Title" />
                                    <input type="hidden" name="id" value="@Model.FirstOrDefault().ima.FirstOrDefault().id" />
                                </div>
                                @if (Model.FirstOrDefault().ima.FirstOrDefault().Images != null)
                                {
                                    arrStr = Model.FirstOrDefault().ima.FirstOrDefault().Images.Split(',');
                                    <div class="form-group">
                                        <label>Hình Ảnh</label>
                                        <input type="file" name="images" accept="image/*" multiple="multiple" />
                                        <div class="row">
                                            @foreach (var img in arrStr)
                                            {

                                                <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@img') center center no-repeat / cover;">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh</label>
                                        <br />
                                        <input type="file" name="images" accept="image/*" multiple="multiple" />
                                    </div>
                                }
                                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Lưu </button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

